<h1>New student</h1>
<% if flash[:notice]%>
<p style="color: green;"><%= flash[:notice] %></p>
<% end %>

<% form_for(@student) do |f| %>
  <%= f.error_messages %><br />
  
  <b><%= f.label :first_name%>:</b>
  <%= f.text_field :first_name%><br />
  
  <b><%= f.label :last_name%>:</b>
  <%= f.text_field :last_name %><br />
  
  <b><%= label_tag("School:") %></b>
  <%= collection_select(:student, :school_id, School.find(:all), :id, :name, {:prompt => "Select School"}) %><br />
  
  <b><%= f.label :rank%>:</b>
  <%= f.text_field :rank%><br />
  
  <b><%= f.label :last_test%>:</b>
  <%= f.text_field :last_test%><br />
  
  <b><%= f.label :email_address%>:</b>
  <%= f.text_field :email_address%><br />
  
  <b><%= f.label :phone%>:
  <%= f.text_field :phone%><br />
  

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', students_path %>
