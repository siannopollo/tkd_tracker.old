<h1>New student</h1>
<% if flash[:notice]%>
<p style="color: green;"><%= flash[:notice] %></p>
<% end %>

<% form_for(@student) do |f| %>
  <%= f.error_messages %><br />
  <%= f.label :first_name%>:
  <%= f.text_field :first_name%><br />
  
  <%= f.label :last_name%>:
  <%= f.text_field :last_name %><br />
  
  <%= label_tag("School:") %>
  <%= collection_select(:student, :school_id, School.find(:all), :id, :name, {:prompt => "Select School"}) %><br />
  
  <%= f.label :rank%>:
  <%= f.text_field :rank%><br />
  
  <%= f.label :last_test%>:
  <%= f.text_field :last_test%><br />
  
  <%= f.label :email_address%>:
  <%= f.text_field :email_address%><br />
  
  <%= f.label :phone%>:
  <%= f.text_field :phone%><br />
  

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', students_path %>
