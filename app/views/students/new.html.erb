<h1>New student</h1>
<% if flash[:notice]%>
<p style="color: green;"><%= flash[:notice] %></p>
<% end %>

<% form_for(@student) do |f| %>
  <%= f.error_messages %><br />
 <table>
 <tr>	 
  <td><b><%= f.label :first_name%>:</b></td>
  <td><%= f.text_field :first_name%></td>
 </tr>
 
 <tr> 
  <td><b><%= f.label :last_name%>:</b></td>
  <td><%= f.text_field :last_name %></td>
</tr>
  
<tr>  
  <td><b><%= label_tag("School:") %></b></td>
  <td><%= collection_select(:student, :school_id, School.find(:all, :order => "name"), :id, :name, {:prompt => "Select School"}) %></td>
</tr>

<tr>  
  <td><b><%= f.label :rank%>:</b></td>
  <td><%= f.text_field :rank%></td>
</tr>

<tr>  
  <td><b><%= f.label :last_test%>:</b></td>
  <td><%= f.text_field :last_test%><br /></td>
</tr>

<tr>  
  <td><b><%= f.label :email_address%>:</b></td>
  <td><%= f.text_field :email_address%></td>
</tr>
  
<tr>  
  <td><b><%= f.label :phone%>:</td>
  <td><%= f.text_field :phone%></td>
</tr>
</table> 

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', students_path %>
